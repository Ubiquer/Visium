<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arek.visium.UserPreferencesActivity"
    tools:showIn="@layout/app_bar_start">

    <android.support.v7.widget.RecyclerView
        android:paddingTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/preferences_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="false"
        android:scrollbars="vertical"
        >
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#1C1C1C"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:background="#1C1C1C"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:textSize="20sp"
                android:id="@+id/confirmation_button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/confirmColors"
                android:text="Confirm" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/categories"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:text="Categories: "
                android:textSize="26dp"
                android:textStyle="normal" />

            <TextView
                android:paddingLeft="8dp"
                android:layout_toRightOf="@id/categories"
                android:id="@+id/num_of_categories"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>
