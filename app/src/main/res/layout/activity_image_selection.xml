<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/confirmColors"
    tools:context="com.example.arek.visium.TestActivity">

    <ImageView
        android:paddingTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/test_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/category_spinner"
        android:layout_below="@id/test_image"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:scrollbarStyle="insideInset"
        android:background="@drawable/gradient_stroke"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:popupElevation="3dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/carousel_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spinner">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/carousel_recycler_view"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/test_button"
            android:text="test"
            android:layout_weight="1"
            android:textColor="@color/lazur"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/gradient_stroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/upload_button"
            android:text="upload"
            android:layout_weight="1"
            android:textColor="@color/lazur"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/gradient_stroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
