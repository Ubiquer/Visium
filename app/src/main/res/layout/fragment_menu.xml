                android:text="Rankings"
                android:textSize="16dp"
                android:id="@+id/rankings_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
    </RelativeLayout>

