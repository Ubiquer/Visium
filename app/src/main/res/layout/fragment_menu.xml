                android:text="Evaluation"
                android:textSize="16sp"
                android:onClick="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/evaluation_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/linear_layout_menu_activity_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rankings_linear">
            <ImageView
                android:id="@+id/ranking_icon"
                android:src="@drawable/crown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="@dimen/menu_image_view_margin_right"
                android:layout_marginLeft="12dp"/>
            <Button
