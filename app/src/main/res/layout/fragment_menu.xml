        <LinearLayout
            android:id="@+id/evaluation"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_name_textView"
            android:layout_width="@dimen/linear_layout_menu_activity_width"
            android:paddingTop="24dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <ImageView
                android:id="@+id/competition_icon"
                android:src="@drawable/ic_trophy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="@dimen/menu_image_view_margin_right"/>
            <Button
                android:textColor="@color/green1"
                android:text="Competition"
                android:textSize="16sp"
                android:onClick="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/competition_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rankings_linear"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/evaluation"
            android:layout_width="@dimen/linear_layout_menu_activity_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <ImageView
                android:id="@+id/evaluation_icon"
                android:src="@drawable/ic_thumbs_up_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="@dimen/menu_image_view_margin_right"
                android:layout_marginLeft="12dp"/>
            <Button
